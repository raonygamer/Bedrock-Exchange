{
    "namespace": "alchemical_chest",
    "alchemical_grid_item@common.container_item": {
        "$item_collection_name": "container_items"
    },
    "alchemical_chest_label": {
        "type": "label",
        "offset": [ 7, -1 ],
        "anchor_from": "top_left",
        "anchor_to": "top_left",
        "text": "#text",
        "size": [ "90%", "default" ],
        "color": "$title_text_color",
        "layer": 2,
        "bindings": [
            {
                "binding_name": "#container_name",
                "binding_name_override": "#text",
                "binding_condition": "always_when_visible"
            }
        ]
    },
    "alchemical_chest_grid": {
        "type": "grid",
        "size": [ 234, 144 ],
        "anchor_from": "top_middle",
        "anchor_to": "top_middle",
        "grid_dimensions": [ 13, 8 ],
        "grid_item_template": "alchemical_chest.alchemical_grid_item",
        "collection_name": "container_items"
    },
    "alchemical_chest_panel_top_half": {
        "type": "panel",
        "size": [ "100%", "50%" ],
        "offset": [ 0, 12 ],
        "anchor_to": "top_middle",
        "anchor_from": "top_middle",
        "controls": [
            { "alchemical_chest_label@alchemical_chest.alchemical_chest_label": {} },
            {
                "alchemical_chest_grid@alchemical_chest.alchemical_chest_grid": {
                    "offset": [ 0, 10 ]
                }
            }
        ]
    },
    "alchemical_chest_panel": {
        "type": "panel",
        "controls": [
            { "container_gamepad_helpers@common.container_gamepad_helpers": {} },
            { "selected_item_details_factory@common.selected_item_details_factory": {} },
            { "item_lock_notification_factory@common.item_lock_notification_factory": {} },
            {
                "root_panel@common.root_panel": {
                    "layer": 1,
                    "size": ["250px", "257px"],
                    "controls": [
                        { 
                            "common_panel@common.common_panel": {
                                "size": ["100%", "100%"]
                            } 
                        },
                        {
                            "alchemical_chest_panel": {
                                "type": "panel",
                                "layer": 5,
                                "controls": [
                                    { "alchemical_chest_panel_top_half@alchemical_chest.alchemical_chest_panel_top_half": {} },
                                    { "inventory_panel_bottom_half_with_label@common.inventory_panel_bottom_half_with_label": {} },
                                    { "hotbar_grid@common.hotbar_grid_template": {} },
                                    { "inventory_take_progress_icon_button@common.inventory_take_progress_icon_button": {} }
                                ]
                            }
                        },
                        { "inventory_selected_icon_button@common.inventory_selected_icon_button": {} },
                        { "gamepad_cursor@common.gamepad_cursor_button": {} }
                    ]
                }
            },
            { "flying_item_renderer@common.flying_item_renderer": {} }
        ]
    },
    "alchemical_chest_screen@common.inventory_screen_common": {
        "$close_on_player_hurt|default": true,
        "$use_custom_pocket_toast|default": false,
        "close_on_player_hurt": "$close_on_player_hurt",
        "use_custom_pocket_toast": "$use_custom_pocket_toast",
        "variables": [
            {
                "requires": "$desktop_screen",
                "$screen_content": "alchemical_chest.alchemical_chest_panel",
                "$screen_bg_content": "common.screen_background",
                "$screen_background_alpha": 0.4
            }
        ]
    }
}